programa {
  funcao inicio() {
    inteiro pares, soma=0, cont=0
    real media

    pares=1
    enquanto (pares<=100){
      se(pares%2==0){
        soma=soma+pares
        cont++
      }
      pares++
    }
    escreva("A soma dos pares é: ", soma)
    escreva("\nTotal de pares é: ", cont)

    media = soma / cont

    escreva("\nA média de pares é: ", media)

  }
}
