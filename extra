programa {
  inclua biblioteca Matematica
  funcao inicio() {
    real nota, soma, media, pond_nota
    inteiro i, q_notas
    cadeia nome, apelido
    caracter ent, pond

    ent = 's'
    enquanto(ent == 's' ou ent == 'S'){

    soma = 0
    media = 0

    escreva("Insira nome: ")
    leia(nome)

    escreva("Insira apelido: ")
    leia(apelido)

    escreva("As notas têm a mesma ponderação? (s ou n)")
    leia(pond)

    se(pond == 's' ou pond == 'S'){

    escreva("Quantas notas deseja inserir? ")
    leia(q_notas)

      para(i=1; i<=q_notas; i++){
        faca{
          escreva("Insira ", i, "ª nota: ")
          leia(nota)
          se(nota>20 ou nota<0){
          escreva("Nota inválida, a nota deve estar compreendida entre 0 e 20\n")
          }
        }enquanto(nota>20 ou nota<0)
        soma = nota + soma
        media = soma / q_notas
      }
      escreva(apelido, ", ", nome, "\n")

      se(media>16){
        escreva("Aprovado com distinção, com a média de ", media, " valores")
      }
      senao se(media>10){
        escreva("Aprovado, com a média de ", media, " valores")
      }
      senao{
        escreva("Reprovado, com a média de ", media, " valores")
      }
    }
    senao se(pond == 'n' ou pond == 'N'){
      escreva("Quantas notas deseja inserir? ")
      leia(q_notas)

      para(i=1; i<=q_notas; i++){
        faca{
          escreva("Insira ", i, "ª nota: ")
          leia(nota)
          se(nota>20 ou nota<0){
          escreva("Nota inválida, a nota deve estar compreendida entre 0 e 20\n")
          }
        }enquanto(nota>20 ou nota<0)

        faca{
          escreva("Insira ", i, "ª ponderação: ")
          leia(pond_nota)
          se(pond_nota>100 ou pond_nota<0){
            escreva("Ponderação inválida, a ponderação deve estar compreendida entre 0 e 100\n")
          }
        }enquanto(pond_nota>100 ou pond_nota<0)
        soma = nota * (pond_nota / 100)
        media = soma + media
    }
        se(media>16){
          escreva("Aprovado com distinção, com a média de ", media, " valores")
        }
        senao se(media>10){
          escreva("Aprovado, com a média de ", media, " valores")
        }
        senao{
          escreva("Aprovado, com a média de ", media, " valores")
        }
    }
    senao{
      escreva("Opção errada")
    }
    
    escreva("\nDeseja continuar? (s ou n) ")
    leia(ent)
    
    }
  }
}
